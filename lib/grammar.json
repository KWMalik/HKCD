{   
    "lex": {
        "macros": {
            "Letter": "[a-zA-Z]",
            "Digit" : "[0-9]",
            "NonZeroDigit" : "[1-9]",
        },
        
        "rules": [
            ["/\\*.*\\*/", "/* skip */"],
            ["//.*", "/* skip */"],
            ["\\s+", "/* skip */"],
            ["class", "return 'ReservedWord';"],
            ["public", "return 'ReservedWord';"],
            ["void", "return 'ReservedWord';"],
            ["String", "return 'ReservedWord';"],
            ["static", "return 'ReservedWord';"],
            ["main", "return 'ReservedWord';"],
            ["System.out.println", "return 'ReservedWord';"],
            ["({NonZeroDigit}{Digit}*|0)", "return 'Integer';"],
            ["{Letter}({Letter}|{Digit})*", "return 'ID';"],
            ["(\\+|-|\\*|\\/|<=|<|>=|>|==|\\!=|&&|\\|\\||\\!)", "return 'Operator';"],
            ["(;|\\.|,|=|\\(|\\)|\\{|\\}|\\[|\\])", "return 'Delimiter';"],
        ]
    },

    "bnf": { 
        "Program" : ["ReservedWord Program", "ReservedWord", "ID", "Delimiter", "Integer", "Operator"]
    }
}